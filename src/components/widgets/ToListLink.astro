---
import { Icon } from 'astro-icon/components';
import { getBlogPermalink, getPhotographyPermalink } from '~/utils/permalinks';
import { I18N } from '~/utils/config';
import Button from '~/components/ui/Button.astro';

const { textDirection } = I18N;
export interface Props {
  photo?: boolean;
}
const { photo } = Astro.props;
---

<div class={`${photo ? 'max-w-5xl' : 'max-w-3xl'} mx-auto px-6 sm:px-6 pt-8 md:pt-4 pb-12 md:pb-20`}>
  <Button variant="tertiary" class="px-3 md:px-3" href={photo ? getPhotographyPermalink() : getBlogPermalink()}>
    {
      textDirection === 'rtl' ? (
        <Icon name="tabler:chevron-right" class="w-5 h-5 mr-1 -ml-1.5 rtl:-mr-1.5 rtl:ml-1" />
      ) : (
        <Icon name="tabler:chevron-left" class="w-5 h-5 mr-1 -ml-1.5 rtl:-mr-1.5 rtl:ml-1" />
      )
    }
    {photo ? '返回相册列表' : '返回文章列表'}
  </Button>
</div>

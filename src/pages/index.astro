---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Stats from '~/components/widgets/Stats.astro';
import { SITE } from '~/utils/config';
import homeLogo from '~/assets/images/2025.jpg';

const metadata = {
  title: '首页'
};
---

<Layout metadata={metadata}>
  <Hero image={homeLogo}>
    <Fragment slot="title">
      <span class="hidden xl:inline">欢迎来到</span>
      <span class="relative bottom-2">{SITE?.name}<br /></span>
      <span>一个充满</span>
      <span class="text-accent">乐趣的</span><span>网站</span>
    </Fragment>
    <Fragment slot="subtitle">
      <span class="block sm:inline sm:text-page">专注于技术与生活分享，</span>致力于传播并创造快乐。
    </Fragment>
  </Hero>

  <Stats
    stats={[
      { title: '性能', amount: '100' },
      { title: '无障碍', amount: '100' },
      { title: '最佳做法', amount: '100' },
      { title: 'SEO', amount: '100' }
    ]}
  />
  <Note />

  <BlogLatestPosts
    title="知识分享"
    information={`在这里，我将分享一些我所掌握的知识，以及我在工作中遇到问题时采取的解决方案。`}
  />
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: '联系',
        icon: 'tabler:mail',
        title: 'Email Share',
        'data-aw-social-share': 'contact-mail',
        'data-aw-text': '我有一些疑惑，请帮我解答🐙'
      }
    ]}
  >
    <Fragment slot="title">与我联系</Fragment>
    <Fragment slot="subtitle">请使用邮件与我联系，我将在 24 小时内回复您</Fragment>
  </CallToAction>
</Layout>
